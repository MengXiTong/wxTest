.uploade-input-box {
  float: left;
  position: relative;
  margin-right: 5%;
  margin-bottom: 8px;
  width: 30%;
  height: 100px;
  background: #e4e4e4;
}

.uploade-input-box:before,
.uploade-input-box:after {
  content: " ";
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  background-color: #ffffff;
  border-radius: 100px;
}

.uploade-input-box:before {
  width: 4.6px;
  height: 40px;
}

.uploade-input-box:after {
  width: 40px;
  height: 4.6px;
}

.uploade-input {
  position: absolute;
  z-index: 1;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}

.uploader-bd {
  margin-bottom: -8px;
  overflow: hidden;
}